#:kivy 1.11.0

<MainWindow>:
    FloatLayout:
        GridLayout:
            cols: 2
            rows: 1
            pos_hint: {"center_x":0.5,"center_y":0.98}
            size_hint: (1, .1)
            Label:
                text: '[b]Local[/b]'
                markup: True
            Label:
                text: '[b]Remote[/b]'
                markup: True
        GridLayout:
            pos_hint: {"center_x":0.5,"center_y":0.65}
            size_hint: (1, .59)
            cols: 2
            rows: 1
            FileLocal:
            FileRemote:
        GridLayout:
            pos_hint: {"center_x":0.5,"center_y":0.3}
            size_hint: (1, .1)
            rows: 1
            cols: 7
            Button:
                id: uploadBut
                text: 'Upload'
            Button:
                id: localNavBut
                text: 'Selected Local\n     Directory'
            Button:
                id: localUpBut
                text: 'Up Local\nDirectory'
            Button:
                id: addrBookBut
                text: 'Address Book'
                on_press: root.manager.current = 'AddressBook'
            Button:
                id: refreshBut
                text: 'Refresh'
            Button:
                id: remoteNavBut
                text: 'Selected Remote\n      Directory'
            Button:
                id: downloadBut
                text: 'Download'
        BoxLayout:
            pos_hint: {"center_x":0.5,"center_y":0.145}
            size_hint: (1, .2)
            TextInput:
                id: queueBox
                multiline: True
        ProgressBar:
            id: progBar
            pos_hint: {"center_x":0.5,"center_y":0.021}
            size_hint: (1, .2)
            canvas:
                BorderImage:
                    border: (12, 12, 12, 12)
                    pos: self.x, self.center_y - 12
                    size: self.width, 24
                    source: 'resources\\grey.png'
                BorderImage:
                    border: [int(min(self.width * (self.value / float(self.max)) if self.max else 0, 12))] * 4
                    pos: self.x, self.center_y -12
                    size: self.width * (self.value / float(self.max)) if self.max else 0, 24
                    source: 'resources\\green.png'

<FileLocalLabel>:
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (.1, .1, .1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<FileLocal>:
    viewclass: 'FileLocalLabel'
    FileLocalLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: True
        touch_multiselect: True

<FileRemoteLabel>:
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (.1, .1, .1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<FileRemote>:
    viewclass: 'FileRemoteLabel'
    FileRemoteLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: True
        touch_multiselect: True

<AddressBook>:
    GridLayout:
        rows: 2
        orientation: 'vertical'
        Addresses:
        GridLayout:
            cols: 4
            rows: 5
            Button:
                id: bookConnect
                text: 'Connect'
            Button:
                id: bookSaveNew
                text: 'Save as New'
            Button:
                id: bookDelete
                text: 'Delete'
            Button:
                id: bookBack
                text: 'Back'
                on_press:
                    root.manager.current = 'MainWindow'
                    app.refreshMain()
            Label:
                text: 'Name'
            TextInput:
                id: bookName
                multiline: False
            Label:
                text: 'Address'
            TextInput:
                id: bookAddr
                multiline: False
            Label:
                text: 'Port (optional)'
            TextInput:
                id: bookPort
                multiline: False
            Label:
                text: 'Username (optional)'
            TextInput:
                id: bookUser
                multiline: False
            Label:
                text: 'Password (optional)'
            TextInput:
                id: bookPass
                multiline: False
            Label:
                text: 'Notes'
            TextInput:
                id: bookNotes
                multiline: True

<SelectableLabel>:
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (.1, .1, .1, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<Addresses>:
    viewclass: 'SelectableLabel'
    SelectableRecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'
        multiselect: False
        touch_multiselect: False
